<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PizzaInfoActivity">

    <ImageView
        android:id="@+id/pizza_image_view"
        android:layout_width="wrap_content"
        android:layout_height="328dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/pizza_image"
        android:scaleType="centerCrop"
        android:src="@drawable/pizza_placeholder" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/pizza_name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Pizza Information"
        android:padding="16dp"
        android:gravity="center_horizontal" />

</LinearLayout>
